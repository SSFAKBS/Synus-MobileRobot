<!-- 
  Simulate a carlike robot with the teb_local_planner in stage:
  - stage
  - map_server
  - move_base
  - static map
  - amcl
  - rviz view
 -->
<launch>

        <!--  ************** Global Parameters ***************  -->
        <param name="/use_sim_time" value="true"/>

	<include file="$(find lsmeca_agv_description)/launch/description.sim.launch"/>

	<node name="robot_state_publisher" pkg="robot_state_publisher"
        	 type="robot_state_publisher">
        	<param name="publish_frequency" value="30.0"/>
    	</node>
    	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        	<param name="use_gui" value="false"/>
    	</node>

        <!--  ************** Stage Simulator ***************  -->
	<!--node pkg="stage_ros" type="stageros" name="stageros" args="$(find lsmeca_agv_simulation)/stage/map_0906.world"-->
	<node pkg="stage_ros" type="stageros" name="stageros" args="$(find lsmeca_agv_simulation)/stage/map_0906.world">
		<remap from="base_scan" to="scan"/>
  	</node>

        <!--  ************** Navigation ***************  -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	  	<rosparam file="$(find lsmeca_agv_simulation)/cfg/carlike/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="$(find lsmeca_agv_simulation)/cfg/carlike/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="$(find lsmeca_agv_simulation)/cfg/carlike/local_costmap_params.yaml" command="load" />
  		<rosparam file="$(find lsmeca_agv_simulation)/cfg/carlike/global_costmap_params.yaml" command="load" />
  		<rosparam file="$(find lsmeca_agv_simulation)/cfg/carlike/teb_local_planner_params.yaml" command="load" />

		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />

		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />

                <param name="clearing_rotation_allowed" value="false" /> <!-- Our carlike robot is not able to rotate in place -->
	</node>


	<!--  ****** Maps *****  -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(find lsmeca_agv_simulation)/maps/map_0906.yaml" output="screen">
		<param name="frame_id" value="/map"/>
	</node>

	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<rosparam file="$(find lsmeca_agv_simulation)/cfg/amcl_params.yaml" command="load" />
	        <param name="initial_pose_x"            value="2.0"/>
		<param name="initial_pose_y"            value="2.0"/>
		<param name="initial_pose_a"            value="0.0"/> 	<!--Unit : Radian-->
	</node>

	<!--  **************** Visualisation ****************  -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find lsmeca_agv_simulation)/cfg/rviz_navigation.rviz"/>

	<!--  **************** robot pose publisher ****************  -->
	<node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher"/>
</launch>
